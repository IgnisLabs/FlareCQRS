{
    "name": "ignislabs/flare-cqrs",
    "description": "Flare is a small CQRS library.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Luciano Longo",
            "email": "luciano.longo@studioignis.net"
        }
    ],
    "minimum-stability": "dev",
    "config": {
        "preferred-install": "dist"
    },
    "autoload": {
        "psr-4": {
            "IgnisLabs\\FlareCQRS\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\IgnisLabs\\FlareCQRS\\": "spec"
        }
    },
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "phpspec/phpspec": "^3.2"
    }
}
